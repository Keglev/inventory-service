/**
 * TypeDoc configuration for automated API documentation generation.
 * Generates markdown documentation from TypeScript source code excluding tests and internal utilities.
 */

{
  "entryPoints": [
    "src/api/**/*.ts",
    "src/context/**/*.ts",
    "src/context/**/*.tsx",
    "src/components/**/*.ts",
    "src/components/**/*.tsx",
    "src/pages/**/*.tsx"
  ],
  "entryPointStrategy": "expand",
  "out": "docs",
  "tsconfig": "tsconfig.app.json",
  "plugin": ["typedoc-plugin-markdown"],
  "theme": "markdown",
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.tsx",
    "**/__mocks__/**",
    "**/vite-env.d.ts",
    "**/main.tsx",
    "**/App.tsx"
  ],
  "readme": "none"
}
