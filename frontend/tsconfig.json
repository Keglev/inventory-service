/**
 * Root TypeScript configuration for the React frontend.
 * Defines compiler options and extends to application and build tool configurations.
 */

{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" },
    { "path": "./tsconfig.test.json" }
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["vite/client", "node"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "vite.config.ts",
    "src/_tests_/**"
  ]
}

