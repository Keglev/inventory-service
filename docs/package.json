{
  "name": "inventory-service-docs",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "docs:bundle": "redocly bundle api/openapi/openapi-root.yaml -o api/openapi/openapi.yaml --ext yaml",
    "docs:build": "redocly build-docs api/openapi/openapi.yaml -o api/redoc/api.html",
    "docs:lint": "redocly lint \"api/openapi/**/*.yaml\"",
    "docs:overview": "node scripts/md2html.mjs api-overview.md api/redoc/index.html",
    "docs": "npm run docs:bundle && npm run docs:build && npm run docs:overview"
  },
  "devDependencies": {
    "@redocly/cli": "^1.29.0",
    "marked": "^12.0.2"
  }
}
